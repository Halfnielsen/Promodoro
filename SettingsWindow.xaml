<Window x:Class="PomodoroWpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="240" Width="260" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" FontFamily="Segoe UI"
        Background="{StaticResource AppBackgroundBrush}" Foreground="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Work (min)" Margin="0,0,0,4"/>
            <TextBox x:Name="WorkBox" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Break (min)" Margin="0,0,0,4"/>
            <TextBox x:Name="BreakBox" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Long Break" Margin="0,0,0,4"/>
            <TextBox x:Name="LongBox" Width="100"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,8,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="60" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
